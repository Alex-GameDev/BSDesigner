.row
{
	flex-direction: row
}

.row-rev
{
	flex-direction: row-reverse
}

.col
{
	flex-direction: column
}

.col-rev
{
	flex-direction: column-reverse
}

.list-element
{
	margin: 3px;
	border-radius: 5px;
}

.bg-panel
{
	align-items: center;
	justify-content: center;
	background-color: rgb(32,32,32);
	flex-grow: 1;
}

.bg-panel-text
{
	font-size: 20px;
	-unity-text-align: upper-center; 
	margin: 20px;
}

.side-panel
{
	width: 300px;
	background-color: rgba(24, 24, 24, 0.8);
}

.flex-grow
{
	flex-grow: 1;
}

/* Engine list */

#ee-scroll-view
{
	height: 100px;
	margin: 5px;
	background-color: rgb(20, 20, 20);
}

.ee-name-tag-div
{
	flex-grow: 1;
	padding: 2px;
}

.ee-delete-btn
{
	height: 20px;
	width: 20px;
	padding: 2px;
}
